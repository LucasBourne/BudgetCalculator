<Window x:Class="BudgetCalculator.Money_Pool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetCalculator"
        mc:Ignorable="d"
        Title="Money Pool" Height="200.84" Width="160.504">
    <Grid>
        <Label Content="Available money in the&#xD;&#xA;savings pool is:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="134" Height="44"/>
        <TextBox Name="AvailableMoneyTextBox" HorizontalAlignment="Left" Height="23" Margin="10,54,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="133"/>
        <Label Content="Transaction amount:" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top"/>
        <TextBox Name="AmountTextBox" HorizontalAlignment="Left" Height="23" Margin="10,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133"/>
        <Button Name="WithdrawButton" Content="Withdraw" HorizontalAlignment="Left" Margin="10,143,0,0" VerticalAlignment="Top" Width="73" Click="WithdrawButton_Click"/>
        <Button Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="88,143,0,0" VerticalAlignment="Top" Width="55" Click="AddButton_Click"/>

    </Grid>
</Window>
